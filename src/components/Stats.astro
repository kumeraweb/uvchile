---
import { Users, Briefcase } from 'lucide-astro'
---

<section id="stats" class="py-20 bg-white">
  <div class="max-w-6xl mx-auto px-6 md:px-12">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 text-center md:text-left">
      <!-- Clientes -->
      <div class="flex flex-col items-center md:items-start animate-fade-up">
        <Users class="w-10 h-10 text-blue-600 mb-4" />
        <h3 class="text-5xl font-bold text-gray-900">300+</h3>
        <p class="text-lg text-gray-700 mt-2">Clientes Satisfechos</p>
      </div>

      <!-- Proyectos -->
      <div class="flex flex-col items-center md:items-start animate-fade-up md:animate-delay-150">
        <Briefcase class="w-10 h-10 text-blue-600 mb-4" />
        <h3 class="text-5xl font-bold text-gray-900">300+</h3>
        <p class="text-lg text-gray-700 mt-2">Proyectos Realizados</p>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fade-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-up {
    animation: fade-up 0.6s ease-out forwards;
  }
  .animate-delay-150 {
    animation-delay: 0.15s;
  }
</style>
