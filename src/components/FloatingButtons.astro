---
import { Headset, ArrowUp } from 'lucide-astro'

/* LINK A TU WHATSAPP */
const whatsappLink = 'https://wa.me/56978698975'
---

<!-- Contenedor general de botones flotantes -->
<div class="fixed bottom-6 right-6 flex flex-col gap-4 z-50">
  <!-- Botón WhatsApp (asesor corporativo) -->
  <a
    href={whatsappLink}
    target="_blank"
    class="bg-[#25D366] hover:bg-[#1EB65A] text-white p-4 rounded-full shadow-lg
           transition transform hover:-translate-y-1 flex items-center justify-center"
    aria-label="Hablar por WhatsApp"
  >
    <!-- Ícono WhatsApp -->
    <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 fill-white" viewBox="0 0 24 24">
      <path
        d="M20.52 3.48A11.93 11.93 0 0 0 12 .04C5.37.04.06 5.36.06 
      12a11.9 11.9 0 0 0 1.64 6L0 24l6.17-1.6A11.94 11.94 0 0 0 
      12 24c6.63 0 12-5.37 12-12 0-3.2-1.25-6.21-3.48-8.52ZM12 
      22.05a9.93 9.93 0 0 1-5.06-1.38l-.36-.21-3.66.95.98-3.57-.23-.37A9.9 
      9.9 0 0 1 2.07 12c0-5.47 4.45-9.93 9.93-9.93 2.65 0 5.14 
      1.04 7.02 2.92a9.86 9.86 0 0 1 2.92 7.02c0 5.47-4.45 
      9.93-9.93 9.93Zm5.47-7.38c-.3-.15-1.77-.87-2.05-.97-.27-.1-.47-.15-.66.15-.2.3-.76.97-.93 
      1.17-.17.2-.34.22-.63.07-.3-.15-1.26-.46-2.4-1.47-.89-.79-1.5-1.77-1.68-2.07-.17-.3-.02-.46.13-.61.13-.13.3-.34.45-.51.15-.17.2-.3.3-.5.1-.2.05-.37-.02-.52-.08-.15-.66-1.6-.9-2.2-.24-.57-.48-.5-.66-.51-.17-.01-.37-.01-.57-.01-.2 
      0-.52.07-.79.37-.27.3-1.04 1.02-1.04 2.5 0 1.48 1.07 2.9 1.22 
      3.1.15.2 2.1 3.2 5.1 4.48.71.3 1.26.47 1.69.6.71.22 1.36.19 
      1.87.12.57-.09 1.77-.72 2.02-1.43.25-.71.25-1.32.17-1.43-.07-.12-.27-.2-.57-.35Z"
      ></path>
    </svg>
  </a>

  <!-- Botón Volver Arriba -->
  <button
    id="backToTop"
    class="hidden bg-gray-800 hover:bg-gray-900 text-white p-4 rounded-full shadow-lg
           transition transform hover:-translate-y-1"
    aria-label="Volver arriba"
  >
    <ArrowUp class="w-6 h-6" />
  </button>
</div>

<script is:inline>
  const btn = document.getElementById('backToTop')

  window.addEventListener('scroll', () => {
    if (window.scrollY > 400) {
      btn.classList.remove('hidden')
    } else {
      btn.classList.add('hidden')
    }
  })

  btn.addEventListener('click', () => {
    window.scrollTo({ top: 0, behavior: 'smooth' })
  })
</script>
